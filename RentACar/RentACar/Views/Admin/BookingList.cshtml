@model IEnumerable<RentACar.Models.Booking>

@{
    ViewBag.Title = "BookingList";
}

<h2>BookingList</h2>

<p>
    @Html.ActionLink("Create New", "CreateBooking")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingRequest.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookingRequest.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBooking", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
