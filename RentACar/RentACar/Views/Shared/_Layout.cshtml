            </div>
            <div id="content" class="col-md-8" style="margin-top: 30px;">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer style="padding: 100px;background-color: yellow">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
