    <div class="container-fluid body-content">
        <div class="row">
            <div id="admin-nav" class="col-md-4" style="padding-left: 0px;">
                <div class="nav admin-nav">
                    <ul>
                        <li>
                            <a href="@Url.Action("VehicleList")" id="link-home">
                                <p>
                                    <span class="fa fa-home" style="vertical-align: middle"></span><span>&nbsp;Vehicles</span>
                                </p>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("VehicleCategoryList")" id="link-contract">
                                <p>
                                    <span class="fa fa-book" style="vertical-align: middle"></span><span>&nbsp;Vehicle Categories</span>
                                </p>
                            </a>
                        </li>
                        <li>
