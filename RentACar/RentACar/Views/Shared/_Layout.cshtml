            font-weight: 100;
            font-family: Calibri, 'Trebuchet MS', 'Segoe UI', sans-serif;
            text-transform: uppercase;
            font-size: 1em;
        }

        .nav.admin-nav ul {
            padding: 0;
        }

        .nav.admin-nav ul li {
            list-style-type: none;
        }

        .nav.admin-nav ul li a {
            color: white;
            display: block;
            padding: 8px 16px;
            transition: background-color 0.5s,
                color 0.5s;
        }

        .nav.admin-nav ul li a.active {
            background-color: rgba(0, 18, 30, 0.60);
            transition: background-color 2.5s,
                color 2.5s;
        }

        .nav.admin-nav ul li a:hover {
            background-color: rgb(0, 18, 30);
            text-decoration: none;
        }
    </style>
</head>
